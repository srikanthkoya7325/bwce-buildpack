<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="TIBCO BW TPCL Microsoft SQL Server DataSource Factory">
   <implementation class="com.tibco.bw.tpcl.jdbc.datasourcefactory.sqlserver.MSSqlServerDataSourceFactory"/>
   
   <property name="osgi.jdbc.driver.class" type="String" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
   <property name="osgi.jdbc.driver.name" type="String" value="sqlserver"/>
   <property name="osgi.jdbc.driver.version" type="String" value="4"/>
   
   <service>
      <provide interface="org.osgi.service.jdbc.DataSourceFactory"/>
   </service>
</scr:component>
